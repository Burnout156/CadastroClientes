@model IEnumerable<CadastroClientesBiblioteca.Classes.Cliente>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>

<h4>Pesquisar</h4>

<div class="row">
    
    <div class="col-4">       
            
        <label name="CPF" class="control-label">CPF</label>
        <input name="CPF" class="form-control" placeholder="000.000.000-00" maxlength="14" />

        <label name="Nome" class="control-label"></label>
        <input name="Nome" class="form-control" />                
  
        <label name="DataNascimento" class="control-label">Data Nascimento</label>
        <input name="DataNascimento" class="form-control" />
                  
    </div>
    <div class="col-4">
            <label name="Sexo" class="control-label">Sexo</label>
            <select name="Sexo" class="form-control">
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>

            <label name="Estado" class="control-label">Estado</label>
            <input name="Estado" class="form-control" />

            <label name="Cidade" class="control-label">Cidade</label>
            <input name="Cidade" class="form-control" />

            <div class="form-group d-flex align-items-center justify-content-center mt-3">
                <input type="submit" value="Achar" class="btn btn-info" />
            </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th> </th>
            <th> </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CPF">Editar</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CPF">Deletar</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
            </tr>
        }
    </tbody>
</table>
